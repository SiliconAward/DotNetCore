@await Component.InvokeAsync("NToastNotify")

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TelerikAspNetCoreApp1</title>

    <link rel="stylesheet" href='@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")' />
    @RenderSection("styles", required: false)
    <style>
        .container {
            background-color: #fbfbfb;
        }
        #main-content {
            padding: 10px;
            border: 1px solid #e1e1e1;
            border-radius: 5px;
            margin: 20px 6px;
            background-color: white;
        }
            form .form-header {
                margin: 10px 4px 30px 1px;
                color: #73787d;
            }
            form .form-submit {
                margin: 30px 0px 16px 0px;
                width: 150px;
            }
         
    </style>
</head>
<body class="k-content container">

    <main>
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <script src='@Url.Content("~/lib/jquery/dist/jquery.min.js")'></script>
    <script src='@Url.Content("~/lib/bootstrap/dist/js/bootstrap.min.js")'></script>

    @RenderSection("scripts", required: false)


</body>
</html>